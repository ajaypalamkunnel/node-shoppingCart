<section>
    <div class="container">
        <div class="row mt-4">
        </div>
        <table class="table mt-5">
  <thead>
    <tr style="background-color:rgb(154, 189, 131);">
      <th  scope="col">Date</th>
      <th>Address</th>
      <th>Pincode</th>
      <th>Mobile</th>
      <th scope="col">Amount</th>
      <th scope="col">Payment</th>
      <th>status</th>
    </tr>
  </thead>
  <tbody>
      {{#each orders}}
    <tr style="background-color:rgb(224, 240, 218);">
     
      <td >{{this.date}}</td>
      <td>{{this.deliveryDetails.address}}</td>
      <td>{{this.deliveryDetails.pincode}}</td>
      <td>{{this.deliveryDetails.mobile}}</td>
       <td>{{this.totalAmount}}</td>
        <td>{{this.paymentMethod}}</td>
        <td>{{this.status}}</td>
      <td>
          <a style="background-color:rgb(89, 160, 42); color: white;" href="/view-order-products/{{this._id}}" class="btn">View products</a>
      </td>
     
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>