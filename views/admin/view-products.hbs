<section>
    <div style="margin-top: 3px;" class="container">
        <div class="row mt-4" >
            <a href="/admin/add-product"  class="btn btn-success  ml-auto">Add Product</a>
        </div>
        <table class="table mt-5" id="productsTable"  >
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
      <th>options</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a style="background-color:rgb(89, 160, 42); color: white;" href="/admin/edit-product/{{this._id}}" class="btn" >Edit</a>
         <a style="background-color:rgb(233, 47, 47); color: white;" href="/admin/delete-product/{{this._id}}" class="btn" onclick="return confirm('Are you want to delete{{this.Name}}?')" >Delete</a>
      </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>

<script>
  $(function (){
    $('#productsTable').DataTable()
  });
</script>